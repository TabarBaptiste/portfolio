---

<footer class="bg-dark-800/50 border-t border-dark-700/50 mt-20">
    <div class="max-w-6xl mx-auto px-4 md:px-8 py-12">
        <div class="grid md:grid-cols-3 gap-8 mb-8">
            <!-- Logo et description -->
            <div>
                <h3 class="text-2xl font-bold gradient-text mb-4">Portfolio</h3>
                <p class="text-dark-400 leading-relaxed">
                    Développeur web passionné, créant des expériences digitales
                    modernes et performantes.
                </p>
            </div>

            <!-- Navigation -->
            <div>
                <h4 class="text-lg font-semibold text-dark-100 mb-4">
                    Navigation
                </h4>
                <ul class="space-y-2">
                    {
                        footerLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-dark-400 hover:text-primary-400 transition-colors duration-300 inline-flex items-center group"
                                >
                                    <span class="w-0 group-hover:w-2 h-0.5 bg-primary-500 mr-0 group-hover:mr-2 transition-all duration-300" />
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Réseaux sociaux -->
            <div>
                <h4 class="text-lg font-semibold text-dark-100 mb-4">
                    Suivez-moi
                </h4>
                <div class="flex gap-4">
                    {
                        socialLinks.map((social) => (
                            <a
                                href={social.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-10 h-10 rounded-xl glass flex items-center justify-center text-dark-400 hover:text-primary-400 hover:scale-110 transition-all duration-300"
                                aria-label={social.name}
                            >
                                <Fragment set:html={social.icon} />
                            </a>
                        ))
                    }
                </div>

                <!-- Bouton retour en haut -->
                <div class="mt-6">
                    <a
                        href="#home"
                        class="inline-flex items-center gap-2 text-dark-400 hover:text-primary-400 transition-colors group"
                    >
                        <svg
                            class="w-4 h-4 group-hover:-translate-y-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                        </svg>
                        Retour en haut
                    </a>
                </div>
            </div>
        </div>

        <!-- Séparateur -->
        <div class="border-t border-dark-700/50 pt-8">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-4"
            >
                <!-- Copyright -->
                <p class="text-dark-400 text-sm text-center md:text-left">
                    © {currentYear} Portfolio. Tous droits réservés.
                </p>

                <!-- Technologies utilisées -->
                <div class="flex items-center gap-2 text-dark-400 text-sm">
                    <span>Créé avec</span>
                    <a
                        href="https://astro.build"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-primary-400 hover:text-primary-300 transition-colors font-medium"
                    >
                        Astro
                    </a>
                    <span>&</span>
                    <a
                        href="https://tailwindcss.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-primary-400 hover:text-primary-300 transition-colors font-medium"
                    >
                        Tailwind CSS
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- Bouton scroll to top flottant -->
<button
    id="scroll-to-top"
    class="fixed bottom-8 right-8 w-12 h-12 rounded-full bg-gradient-to-r from-primary-500 to-primary-600 text-white shadow-lg shadow-primary-500/30 flex items-center justify-center opacity-0 transition-all duration-300 hover:scale-110 z-40"
    style="position: fixed !important; bottom: max(2rem, env(safe-area-inset-bottom)) !important; right: max(2rem, env(safe-area-inset-right)) !important; -webkit-transform: translateZ(0); transform: translateZ(0); will-change: transform;"
    aria-label="Retour en haut"
>
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
    </svg>
</button>

<script>
    // Bouton scroll to top
    const scrollToTopBtn = document.getElementById("scroll-to-top");

    window.addEventListener("scroll", () => {
        if (window.pageYOffset > 300) {
            scrollToTopBtn?.classList.remove("opacity-0");
            scrollToTopBtn?.classList.add("opacity-100");
        } else {
            scrollToTopBtn?.classList.add("opacity-0");
            scrollToTopBtn?.classList.remove("opacity-100");
        }
    });

    scrollToTopBtn?.addEventListener("click", () => {
        window.scrollTo({
            top: 0,
            behavior: "smooth",
        });
    });
</script>
