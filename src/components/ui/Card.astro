---
interface Props {
    className?: string;
    hover?: boolean;
}

const { className = "", hover = true } = Astro.props;
---

<div
    class={`
    glass rounded-2xl p-6 card-shine
    ${hover ? "transition-all duration-300 hover:transform hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/20" : ""}
    ${className}
    `}
>
    <slot />
</div>
